@page
@model DeleteModel
@{
    ViewData["Title"] = "Удаление объявления";
}

<!-- item info -->
<div class="d-flex justify-content-center bg-white py-5">
    <div class="rounded shadow-lg w-100 mx-auto p-4" style="max-width: 750px">
        <div class="container my-3">
            <form method="post">
                <h2 class="fw-bold my-4">Удалить объявление "@Model.Ad.Name"?</h2>
                <a class="btn blue-button text-white" type="button" asp-page="/UserAds">Отмена</a>
                <input type="hidden" asp-for="Ad.AdId" />
                <button class="btn btn-danger text-white ms-3" type="submit">Удалить</button>
            </form>
        </div>
    </div>
</div>